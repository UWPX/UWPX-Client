<UserControl x:Class="UWPX_UI.Controls.AccountImagePresenceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
             xmlns:valueconverter="using:UWPX_UI_Context.Classes.ValueConverter"
             Width="40"
             Height="40"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Resources/Styles/ChatPersonPictureStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="controls:DropShadowPanel">
                <Setter Property="BlurRadius" Value="12"/>
                <Setter Property="OffsetX" Value="0"/>
                <Setter Property="OffsetY" Value="0"/>
                <Setter Property="ShadowOpacity" Value="0.4"/>
                <Setter Property="Color" Value="Black"/>
                <Setter Property="IsMasked" Value="True"/>
            </Style>

            <valueconverter:StringBrushValueConverter x:Key="StringBrushValueConverter"/>
            <valueconverter:ChatTypeFontFamilyConverter x:Key="ChatTypeFontFamilyConverter"/>
            <valueconverter:BadgeCountCaptedValueConverter x:Key="BadgeCountCaptedValueConverter"/>
            <valueconverter:BadgeCountVisibilityValueConverte x:Key="BadgeCountVisibilityValueConverte"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <muxc:PersonPicture x:Name="contact_pp"
                            Grid.Row="0"
                            Width="{x:Bind Width, Mode=OneWay}"
                            Height="{x:Bind Height, Mode=OneWay}"
                            Background="{x:Bind BareJid, Mode=OneWay, Converter={StaticResource StringBrushValueConverter}}"
                            FontFamily="{x:Bind ChatType, Mode=OneWay, Converter={StaticResource ChatTypeFontFamilyConverter}}"
                            Initials="{x:Bind VIEW_MODEL.MODEL.Initials, Mode=OneWay}"
                            ProfilePicture="{x:Bind Image, Mode=OneWay}"
                            Style="{StaticResource ChatPersonPictureStyle}"/>

        <controls:DropShadowPanel Grid.Row="0"
                                  Margin="0,0,-2,-2"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Bottom"
                                  Visibility="{x:Bind PresenceVisibility, Mode=OneWay}">
            <muxc:InfoBadge Width="13"
                            Height="13"
                            Background="{x:Bind PresenceProp, Mode=OneWay, Converter={StaticResource PresenceBrushValueConverter}}"
                            Style="{StaticResource AttentionDotInfoBadgeStyle}"/>
        </controls:DropShadowPanel>
        <controls:DropShadowPanel Grid.Row="0"
                                  Margin="0,0,-2,-2"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Top"
                                  Visibility="{x:Bind BadgeCount, Mode=OneWay, Converter={StaticResource BadgeCountVisibilityValueConverte}}">
            <muxc:InfoBadge Style="{StaticResource AttentionValueInfoBadgeStyle}"
                            Value="{x:Bind BadgeCount, Mode=OneWay, Converter={StaticResource BadgeCountCaptedValueConverter}}"/>
        </controls:DropShadowPanel>
    </Grid>
</UserControl>
