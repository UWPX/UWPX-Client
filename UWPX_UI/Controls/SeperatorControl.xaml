<UserControl x:Class="UWPX_UI.Controls.SeperatorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="text_tbx"
                   Margin="10,10,0,2"
                   Foreground="{ThemeResource TextControlBorderBrush}"
                   Text="{x:Bind Text, Mode=OneWay}"
                   Visibility="{x:Bind Text, Converter={StaticResource StringEmptyVisabilityValueConverter}, Mode=OneWay}"/>
        <Rectangle Grid.Row="1"
                   Height="2"
                   HorizontalAlignment="Stretch"
                   Fill="{StaticResource TextControlBorderBrush}"/>
    </Grid>
</UserControl>
